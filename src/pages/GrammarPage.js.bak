import React, { useState } from 'react';
import { checkGrammar } from '../api/gemini';

const GrammarPage = () => {
  const [input, setInput] = useState('');
  const [correction, setCorrection] = useState('');
  const [loading, setLoading] = useState(false);

  const handleCheck = async () => {
    if (!input.trim()) return;
    setLoading(true);
    const result = await checkGrammar(input);
    setCorrection(result);
    setLoading(false);
  };

  return (
    <div style={styles.container}>
      <h2>Grammar Checker</h2>
      <textarea
        rows={6}
        placeholder="Enter a sentence with grammar mistakes..."
        value={input}
        onChange={(e) => setInput(e.target.value)}
        style={styles.textarea}
      />
      <button onClick={handleCheck} disabled={loading} style={styles.button}>
        {loading ? 'Checking...' : 'Check Grammar'}
      </button>

      {correction && (
        <div style={styles.resultBox}>
          <h4>Correction & Explanation:</h4>
          <p>{correction}</p>
        </div>
      )}
    </div>
  );
};

const styles = {
  container: { padding: '20px', maxWidth: '800px', margin: '0 auto' },
  textarea: { width: '100%', padding: '10px', fontSize: '16px', marginTop: '10px' },
  button: { marginTop: '10px', padding: '10px 20px', fontSize: '16px' },
  resultBox: { marginTop: '20px', background: '#f9f9f9', padding: '15px', borderRadius: '8px' }
};

export default GrammarPage;
